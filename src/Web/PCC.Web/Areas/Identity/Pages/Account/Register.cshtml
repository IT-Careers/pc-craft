@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="w-25 align-middle mx-auto mt-5">
    <h1 class="text-center text-neon-dark">Register</h1>
    <hr class="bg-neon-dark hr-2" />
    <form class="mt-3" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group font-weight-bold text-neon-dark">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Email">Email</label>
            </div>
            <input asp-for="Input.Email" type="email" class="form-control" id="email" placeholder="Email..." />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group font-weight-bold text-neon-dark">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password">Password</label>
            </div>
            <input asp-for="Input.Password" type="password" class="form-control" id="password" placeholder="Password...">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group font-weight-bold text-neon-dark">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            </div>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password...">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <hr class="bg-neon-dark hr-2 mt-4" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn bg-neon-dark text-white font-weight-bolder">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
