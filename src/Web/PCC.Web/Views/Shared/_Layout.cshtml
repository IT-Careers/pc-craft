<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PCC</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/rSlider.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/rSlider.min.js"></script>
</head>
<body>
    <div class="container-fluid app-container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-neon-gradient">
                <a class="navbar-brand font-weight-bold" asp-controller="Home" asp-action="Index">PCC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav font-weight-bold">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            if (this.User.IsInRole("Admin"))
                            {
                                <li class="nav-item active">
                                    <a class="nav-link">Admin (placeholder)</a>
                                </li>
                            }

                            else if (this.User.IsInRole("User"))
                            {
                                <li class="nav-item active">
                                    <a class="nav-link">User (placeholder)</a>
                                </li>
                            }

                            <li class="nav-item active">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
        <footer class="app-footer mt-3">
            <div class="bg-neon-gradient-reversed rounded">
                <div class="text-white p-3 text-center font-weight-bold">
                    &copy; CopyRight Sanity Web Design Studios 2020. All rights reserved.
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
